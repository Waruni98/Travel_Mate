<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/idRLBSheet"
    android:background="@color/blue_shade_1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Taxi Name"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/idTVTaxiName"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:textSize="15sp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/idIVTaxi"
        android:layout_below="@+id/idTVTaxiName"
        android:layout_margin="4dp"
        android:src="@mipmap/ic_launcher"
        android:padding="4dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/idTVDescription"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/idIVTaxi"
        android:layout_below="@+id/idTVTaxiName"
        android:padding="3dp"
        android:layout_margin="4dp"/>

    <TextView
        android:id="@+id/idTVLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idTVDescription"
        android:layout_marginStart="4dp"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/idIVTaxi"
        android:padding="3dp"
        android:text="Location"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/idTVType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idTVLocation"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/idIVTaxi"
        android:padding="3dp"
        android:text="Type"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/idIVTaxi">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Edit Taxi"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:id="@+id/idBtnEdit"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="View Details"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:id="@+id/idBtnViewDetails"/>


    </LinearLayout>


</RelativeLayout>